<div class="create_window">

  <form class="create_form" action="/create_note" method="post">

    <div class="color_band">

      <a href="/">
        <div class="back_button2">
          <button class="mdl-button mdl-js-button mdl-button--raised" type="button">
            <i class="material-icons">arrow_back</i>
          </button>
        </div>
      </a>

        <div class="create_button">
          <button class="mdl-button mdl-js-button mdl-button--raised" type="submit">
            <i class="material-icons">check</i>
          </button>
        </div>

        <div class="delete_button">
          <button class="mdl-button mdl-js-button mdl-button--raised" type="button">
